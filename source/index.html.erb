<div id="home-slider">
<ul class="bxslider">
    <li class="active">
        <span class="bg bg-1"></span>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1>
                        Create an air of 
                        <br>
                        elegance in any room
                    </h1>
                </div>
            </div>
        </div>                
    </li>
    <li>
        <span class="bg bg-2"></span>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1>
                        Add style and
                        <br>
                        sophistication to your decor
                    </h1>                
                </div>
            </div>
        </div>                                
    </li>
    <li>
        <span class="bg bg-3"></span>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1>
                        Make your own 
                        <br>
                        design statement
                    </h1>                
                </div>
            </div>
        </div>
    </li>
    <li>
        <span class="bg bg-4"></span>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1>
                        Light Control 
                        <br>
                        and Design in One
                    </h1>                
                </div>
            </div>
        </div>                
    </li>
</ul>
</div>

<div class="row-colors">
    <div class="color-1"></div>
    <div class="color-2"></div>
    <div class="color-3"></div>
    <div class="color-4"></div>
</div>

<div class="row-slogan">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <p>
                    Shade-O-Matic® is Canada’s leading supplier of premier quality window coverings. 
                    <br>
                    All of our blinds, shades and shutters are custom-built to ensure a perfect fit each and every time. 
                </p>
            </div>
        </div>
    </div>
</div>

<section class="row-default row-gray">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="section-title text-center">
                    Blinds and Shades
                    <hr>
                    <small class="description">
                        Get the optimal amount of light and privacy you need with our large selection of blinds and shades
                    </small>
                </h1>

                <ul class="bxslider product-slider">
                    <% data.products.products.each do |p| %>
                        <% if p.category == "blinds" %>
                        <li data-lazy="<%= p.image %>" class="lazy-bg">                            
                            <div class="caption">
                                <h2>
                                    <%= p.name%>
                                </h2>
                                <a href="<%= p.url%>" class="btn btn-lg btn-primary">
                                    View Product                                    
                                </a>
                            </div>                            
                        </li>
                        <% end %>          
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="row-default">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="section-title text-center">
                    Shutters
                    <hr>
                    <small class="description">
                        Shutters are the perfect solution for those who want their window coverings to be both functional and aesthetically pleasing
                    </small>
                </h1>

                <ul class="bxslider product-slider">
                    <% data.products.products.each do |p| %>
                        <% if p.category == "shutters" %>
                        <li data-lazy="<%= p.image %>" class="lazy-bg">
                            <div class="caption">
                                <h2>
                                    <%= p.name%>
                                </h2>
                                <a href="<%= p.url%>" class="btn btn-lg btn-primary">
                                    View Product                                    
                                </a>
                            </div>                            
                        </li>
                        <% end %>          
                    <% end %>
                </ul>                
            </div>
        </div>
    </div>
</section>