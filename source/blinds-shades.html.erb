---
title: Blinds and Shades
---

<div class="row-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul class="breadcrumb">
                    <li>
                        <a href="/">
                            Home
                        </a>
                    </li>
                    <li class="active">
                        Blinds and Shades
                    </li>
                </ul>  
            </div>
        </div>
    </div>    
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="text-center section-title">
                Blinds & Shades             
                <hr>
                <small class="description">
                    Convenience and Versatility
                </small>
            </h1>
        </div>
    </div>
</div>

<div class="row-default">
    <div class="container">
        <div class="row">
            <% data.products.products.each do |p| %>
                <% if p.category == "blinds" %>
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="product-card">
                        <a href="<%= p.url%>">
                            <div class="product-image" style="background-image: url('<%= p.imagexs%>');">                            
                                
                            </div>

                            <div class="product-desc">                                
                                <p class="product-name">                                
                                    <%= p.name%>                                
                                </p>
                                <p>
                                    <%= p.description%>
                                </p>                            
                            </div>
                            <div class="product-action">
                                <a href="<%= p.url%>">
                                    View Product
                                </a>                            
                            </div>    
                        </a>                    
                    </div>
                </div>
                <% end %>          
            <% end %>
        </div>
    </div>
</div>