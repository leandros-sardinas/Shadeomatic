<div class="product-card">
    <a href="<%= product.url%>">
        <div class="product-image lazy-bg" 
            style="background-image: url('data:image/gif;base64,');"
            data-lazy="<%= product.imagexs%>">            
        </div>

        <div class="product-desc">                                
            <p class="product-name">                                
                <%= product.name%>
            </p>
            <p>
                <%= product.description%>
            </p>                            
        </div>
                        
        <div class="product-action">
            <a href="<%= product.url%>">
                View Product
                <span class="glyphicon glyphicon-menu-right"></span>
            </a>
            
            <a href="#share" class="social-share pull-right">Share <span class="glyphicon glyphicon-share-alt"></span></a>
                
            <ul class="product-social pull-right">
                <li>
                    <a href="#">
                        <img srcset="/images/icon-facebook.svg" alt="Share on facebook" />
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img srcset="/images/icon-twitter.svg" alt="Share on twitter" />
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img srcset="/images/icon-pinterest.svg" alt="Share on pinterest" />
                    </a>
                </li>                
            </ul>
            
        </div>        
    </a>                    
</div>