<div id="row-slogan" class="row-slogan">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <p>
                    Shade-O-Matic® is Canada’s leading supplier of premier quality window coverings. 
                    <br>
                    All of our blinds, shades and shutters are custom-built to ensure a perfect fit each and every time. 
                </p>
            </div>
        </div>
    </div>
</div>

<section id="blinds-shades" class="row-default row-gray">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="section-title text-center">
                    Blinds and Shades
                    <hr>
                    <small class="description">
                        Get the optimal amount of light and privacy you need with our large selection of blinds and shades
                    </small>
                </h1>
            </div>
            <div class="clearfix"></div>
            
            <div class="owl-carousel owl-theme">
                <% data.products.products.each do |p| %>
                <% if p.category == "blinds" %>

                    <%= partial "productcard", :locals => {:product => p} %>
                
                <% end %>
                <% end %>
            </div>            
            
            <div class="col-xs-12">
                <a href="/blinds-shades" class="pull-right text-uppercase">
                    View All Blinds & Shades
                    <span class="glyphicon glyphicon-menu-right"></span>
                </a>
            </div>
        </div>
    </div>
</section>

<section id="shutters" class="row-default">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="section-title text-center">
                    Shutters
                    <hr>
                    <small class="description">
                        Shutters are the perfect solution for those who want their window coverings to be both functional and aesthetically pleasing
                    </small>
                </h1>                             
            </div>
            
            <% data.products.products.each do |p| %>
                <% if p.category == "shutters" %>
                <div class="col-lg-6 col-md-6 col-xs-12">

                    <%= partial "productcard", :locals => {:product => p} %>

                </div>
                <% end %>          
            <% end %>
            <div class="col-xs-12">
                <a href="/shutters" class="pull-right text-uppercase">
                    View All Shutters
                    <span class="glyphicon glyphicon-menu-right"></span>
                </a>
            </div>
        </div>
    </div>
</section>