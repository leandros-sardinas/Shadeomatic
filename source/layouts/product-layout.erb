<% wrap_layout :layout do %>

    <div class="product-toolbar">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        <li class="name">
                            <%= current_page.data.title%>                    
                        </li>

                        <li class="pull-right">
                            <a href="<%=lang_helper%>dealer-locator" class="btn btn-sm btn-primary">
                                <%= t(:wheretobuy) %>                                
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Slideshow -->
    <%= partial "productslider"%>
    <%= partial "product_breadcrumb"%>

    <%= yield%>

    <div id="product-resources" class="row-default">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="text-center section-title">                        
                        <%= t(:resources) %>
                        <hr>                
                    </h1>
                </div>            
            </div>
            <div class="row">            
                <div class="col-xs-8 col-xs-offset-2">
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <div class="product-highlight">
                            <a href="/measurement-guides" class="text-capitalize">
                                <img srcset="/images/icon-measure.svg" src="/images/icon-measure.png" alt="Specialty Blinds" />
                                <%= t(:measurementGuides) %>                                
                            </a>
                        </div>
                    </div>
    
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <div class="product-highlight">
                            <a href="/installation-instructions" class="text-capitalize">
                                <img srcset="/images/icon-installation.svg" src="/images/icon-installation.png" alt="Specialty Blinds" />
                                <%= t(:installationInstructions) %>                                
                            </a>
                        </div>
                    </div>                    
                    <div class="clearfix"></div>     
                </div>            
            </div>
        </div>
    </div>

<% end %>