            background-image: url('../images/slideshow/1x1920.jpg');    
        }
        .bg-2 {
            background-image: url('../images/slideshow/2x1920.jpg');    
        }
        .bg-3 {
            background-image: url('../images/slideshow/3x1920.jpg');    
        }
        .bg-4 {
            background-image: url('../images/slideshow/4x1920.jpg');    
        }
        }

        /* Large Devices, Wide Screens */
        @media only screen and (min-width : 1200px) {
        .bg-1 {
            background-image: url('../images/slideshow/1x1920.jpg');    
        }
        .bg-2 {
            background-image: url('../images/slideshow/2x1920.jpg');    
        }
        .bg-3 {
            background-image: url('../images/slideshow/3x1920.jpg');    
        }
        .bg-4 {
            background-image: url('../images/slideshow/4x1920.jpg');    
        }
        }
    </style>
