<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">        
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#8cc63f">

    <!-- SEO Meta Tag -->
    <meta name="description" content="<%=current_page.data.title %><%=current_page.data.description %>">
    <meta name="keywords" content="">

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= current_page.data.title%>" />
    <meta property="og:type" content="<%= current_page.data.mediatype%>" />
    <meta property="og:url" content="<%= data.config.config.url%><%=current_page.url%>"/>
    <meta property="og:image" content="<%= data.config.config.url%><%= current_page.data.image%>" />

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" type="image/png" href="/images/homescreen32.png">
       
    <title><%= current_page.data.title %> | Shadeomatic</title>
            
    <noscript>
        <link href="https://fonts.googleapis.com/css?family=Lora|Roboto:400,400i,700" rel="stylesheet">
    </noscript>    
    
    <!-- Stylesheets -->
    <%if current_page.data.category == "homepage" %>
    <style>
        @media only screen and (min-width : 320px) {
        .bg-1 {
            background-image: url('../images/slideshow/1x480.jpg');    
        }
        .bg-2 {
            background-image: url('../images/slideshow/2x480.jpg');    
        }
        .bg-3 {
            background-image: url('../images/slideshow/3x480.jpg');    
        }
        .bg-4 {
            background-image: url('../images/slideshow/4x480.jpg');    
        }
        }

        /* Extra Small Devices, Phones */ 
        @media only screen and (min-width : 480px) {
        .bg-1 {
            background-image: url('../images/slideshow/1x768.jpg');    
        }
        .bg-2 {
            background-image: url('../images/slideshow/2x768.jpg');    
        }
        .bg-3 {
            background-image: url('../images/slideshow/3x768.jpg');    
        }
        .bg-4 {
            background-image: url('../images/slideshow/4x768.jpg');    
        }
        }

        /* Small Devices, Tablets */
        @media only screen and (min-width : 768px) {
        .bg-1 {
            background-image: url('../images/slideshow/1x992.jpg');    
        }
        .bg-2 {
            background-image: url('../images/slideshow/2x992.jpg');    
        }
        .bg-3 {
            background-image: url('../images/slideshow/3x992.jpg');    
        }
        .bg-4 {
            background-image: url('../images/slideshow/4x992.jpg');    
        }
        }

        /* Medium Devices, Desktops */
        @media only screen and (min-width : 992px) {
        .bg-1 {
            background-image: url('../images/slideshow/1x1920.jpg');    
        }
        .bg-2 {
            background-image: url('../images/slideshow/2x1920.jpg');    
        }
        .bg-3 {
            background-image: url('../images/slideshow/3x1920.jpg');    
        }
        .bg-4 {
            background-image: url('../images/slideshow/4x1920.jpg');    
        }
        }

        /* Large Devices, Wide Screens */
        @media only screen and (min-width : 1200px) {
        .bg-1 {
            background-image: url('../images/slideshow/1x1920.jpg');    
        }
        .bg-2 {
            background-image: url('../images/slideshow/2x1920.jpg');    
        }
        .bg-3 {
            background-image: url('../images/slideshow/3x1920.jpg');    
        }
        .bg-4 {
            background-image: url('../images/slideshow/4x1920.jpg');    
        }
        }
    </style>
    <% end %>
    <%= stylesheet_link_tag "bootstrap" %>
    <link rel="stylesheet" media="print" href="/stylesheets/print.css" />   

    <!-- Product Stylesheets -->
    <%if current_page.data.id == "honeycomb" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />
        <link rel="stylesheet" href="/stylesheets/products/honeycomb.css" />
    <% end %>    
    <%if current_page.data.id == "shadowmagic" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />
        <link rel="stylesheet" href="/stylesheets/products/shadowmagic.css" />
    <% end %>
    <%if current_page.data.id == "concept" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/concept.css" />
    <% end %>
    <%if current_page.data.id == "fauxwood" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/fauxwood.css" />
    <% end %>
    <%if current_page.data.id == "grandeur" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/grandeur.css" />
    <% end %>
    <%if current_page.data.id == "pleated" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/pleated.css" />
    <% end %>
    <%if current_page.data.id == "polysatin" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/polysatin.css" />
    <% end %>
    <%if current_page.data.id == "roller" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/roller.css" />
    <% end %>
    <%if current_page.data.id == "paneltrack" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/paneltrack.css" />
    <% end %>
    <%if current_page.data.id == "roman" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/roman.css" />
    <% end %>
    <%if current_page.data.id == "sheerluxe" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/sheerluxe.css" />
    <% end %>
    <%if current_page.data.id == "vertical" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/vertical.css" />
    <% end %>
    <%if current_page.data.id == "wood" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/wood.css" />
    <% end %>
    <%if current_page.data.id == "aluminum" %>
        <link rel="stylesheet" href="/stylesheets/products/product.css" />        
        <link rel="stylesheet" href="/stylesheets/products/aluminum.css" />
    <% end %>
  </head>

  <body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">
          You are using an <strong>outdated</strong> browser. 
          Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.
        </p>
    <![endif]-->
    
    <%= partial "header"%>

    <%= yield %>

    <%= partial "footer"%>
    
    <!-- Required JS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" defer></script>    
    <script src="/javascripts/jquery.bxslider.js" defer></script>    
    <script src="/javascripts/bootstrap.js" defer></script>
    <script src="/javascripts/jquery.appear.js" defer></script>        

    <!-- Page specific -->
    <%if current_page.data.category == "homepage" %>
        <script src="/javascripts/owl.carousel.js" defer></script>
        <script src="/javascripts/home.js" defer></script>
    <% end %>
        

    <%if current_page.data.id == "installation" %> 
        <script src="/javascripts/vue.min.js" defer></script>
        <script src="/javascripts/installation.js" defer></script>        
    <% end %>
    
    <%if current_page.data.id == "measurement" %>
        <script src="/javascripts/vue.min.js" defer></script>
        <script src="/javascripts/measurement.js" defer></script>        
    <% end %>

    <%if current_page.data.id == "locator" %> 
        <script src="/javascripts/vue.min.js" defer></script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD8HUxEbYS_5Y80fNWk4El1IC6AICXARxw&libraries=places">
        </script>
        <script src="/javascripts/dealer-locator.js" defer></script>        
    <% end %>
    
    <%if current_page.data.category == "product" %>
        <script src="/javascripts/product.js" defer></script>
    <% end %>    

    <%if current_page.data.type == "contact" %>
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        <script src="/javascripts/jquery.validate.min.js" defer></script>
        <script src="/javascripts/contact.js" defer></script>
    <% end %>
  </body>
</html>
