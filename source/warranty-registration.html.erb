<div class="container">
<div class="row">
    <div class="col-xs-12">
        <h1 class="text-center section-title">
            Warranty Registration
            <hr>
            <small class="description">
                Please take a moment to register your product and activate your warranty
            </small>
        </h1>
    </div>
</div>
</div>

<form id="app" class="row-default" method="get">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <label for="order" data-required="true">
                        Order / Reference number
                    </label>
                    <input type="text" class="form-control" id="order" name="order" required />
                </div>
            </div>

            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label for="name" data-required="true">
                        Full name
                    </label>
                    <input type="text" class="form-control" id="name" name="name" required />
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label for="email" data-required="true">
                        Email Address
                    </label>
                    <input type="email" class="form-control" id="email" name="email" required />
                </div>
            </div>

            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label for="country" data-required="true">
                        Country
                    </label>
                    <select id="country" 
                        name="country"
                        class="form-control">

                        <option 
                            v-for="country in countries" 
                            v-bind:value="country.name"
                            :key="country.name">
                                {{country.name}}
                        </option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label for="province" data-required="true">
                        Province
                    </label>
                    <select id="province" name="province" class="form-control">
                        <option v-for="province in selectedCountry.provinces" v-bind:value="province.abbrv">
                            {{province.abbrv}}
                        </option>
                    </select>
                </div>
            </div>

            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label for="address" data-required="true">
                        Address
                    </label>
                    <input type="text" class="form-control" id="address" name="address" required />
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label for="address2">
                        Address 2
                    </label>
                    <input type="email" class="form-control" id="address2" name="address2" required />
                </div>
            </div>

            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label for="city" data-required="true">
                        City
                    </label>
                    <input type="text" class="form-control" id="city" name="city" required />
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    <label for="postalcode" data-required="true">
                        Postal Code / Zip
                    </label>
                    <input type="text" class="form-control" id="postalcode" name="postalcode" required />
                </div>
            </div>

            <div class="col-xs-12">
                <a href="#submit" v-on:click="sendWarranty" class="btn btn-lg btn-primary pull-right">
                    Send
                </a>
            </div>

        </div>
    </div>
</form>